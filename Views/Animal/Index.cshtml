@model List<Animal>

<h1 class="animal-header"> Animals for adoption</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Species
            </th>
            <th>
                Breed
            </th>
            <th>
                Gender
            </th>
            <th>
                Adoption Status
            </th>
            <th>
                Photo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.AdoptionStatus))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Age
                </td>
                <td>
                    @obj.Species
                </td>
                <td>
                    @obj.Breed
                </td>
                <td>
                    @obj.Sex
                </td>
                <td>
                    @obj.AdoptionStatus
                </td>
                <td>
                    <img src="@obj.PhotoUrl" width="80px" height="120px"/>
                </td>
            </tr>
        }
    </tbody>
</table>