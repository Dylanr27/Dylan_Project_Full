@model Animal

<form method="post">

    <div class="border p-4">

        <div class="row p-2 border-easy">

            <h2 class="text-primary create-header">Edit details for the animal</h2>

            <hr />

            <div class="mb-2 row">

                <label asp-for="Name" class="p-1"></label>

                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mb-2 row">

                <label asp-for="Age" class="p-1"></label>

                <input asp-for="Age" class="form-control" />

                <span asp-validation-for="Age" class="text-danger"></span>

            </div>

            <div class="mb-2 row">

                <label asp-for="Species" class="p-1"></label>

                <select asp-for="Species" class="form-control">
                    <option value="Cat">Cat</option>
                    <option value="Dog">Dog</option>
                </select>

            </div>

            <div class="mb-2 row">

                <label asp-for="Breed" class="p-1"></label>

                <input asp-for="Breed" class="form-control" />

            </div>

            <div class="mb-2 row">

                <label asp-for="Sex" class="p-1"></label>

                <select asp-for="Sex" class="form-control">
                    <option value=""></option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>

            </div>

            <div class="mb-2 row">

                <label asp-for="Size" class="p-1"></label>

                <select asp-for="Size" class="form-control">
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                </select>

            </div>

            <div class="mb-2 row">

                <label asp-for="Description" class="p-1"></label>

                <input asp-for="Description" class="form-control" />

            </div>

            <div class="mb-2 row">

                <label asp-for="AdoptionStatus" class="p-1"></label>

                <select asp-for="AdoptionStatus" class="form-control">
                    <option value="Available">Available</option>
                    <option value="Pending">Pending</option>
                    <option value="Adopted">Adopted</option>
                </select>

            </div>

            <div class="mb-3 row">

                <label asp-for="PhotoUrl" class="p-1"></label>

                <input asp-for="PhotoUrl" class="form-control" />

            </div>

            <div class="row pb-2">

                <div class="col-6">
                    <button type="submit" class="btn btn-primary rounded-left form-control">Finish</button>
                </div>

                <div class="col-6">

                    <a asp-controller="Animal"
                       asp-action="Index"
                       class="btn btn-secondary rounded-right form-control">
                        Back to List
                    </a>

                </div>
            </div>

        </div>

    </div>

</form>