@model Animal

<div class="card shadow border-0 card-margin">

    <div class="card-header bg-primary bg-gradient ml-0 py-3">

        <div class="row">

            <div class="col-12 text-center">

                <h2 class="text-white">Enter details for new animal</h2>

            </div>

        </div>

    </div>

    <div class="card-body">

        <form method="post">

            <div class="border px-4">

                <div class="row pb-3">

                    <div class="mb-2 row">

                        <label asp-for="Name" class="p-1"></label>

                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="mb-2 row">

                        <label asp-for="Age" class="p-1"></label>

                        <input asp-for="Age" class="form-control" />

                        <span asp-validation-for="Age" class="text-danger"></span>

                    </div>

                    <div class="mb-2 row">

                        <label asp-for="Species" class="p-1"></label>

                        <select asp-for="Species" class="form-control">
                            <option value="Cat">Cat</option>
                            <option value="Dog">Dog</option>
                        </select>

                    </div>

                    <div class="mb-2 row">

                        <label asp-for="Breed" class="p-1"></label>

                        <input asp-for="Breed" class="form-control" />

                    </div>

                    <div class="mb-2 row">

                        <label asp-for="Sex" class="p-1"></label>

                        <select asp-for="Sex" class="form-control">
                            <option value=""></option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>

                    </div>

                    <div class="mb-2 row">

                        <label asp-for="Size" class="p-1"></label>

                        <select asp-for="Size" class="form-control">
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                            <option value="Large">Large</option>
                        </select>

                    </div>

                    <div class="mb-2 row">

                        <label asp-for="Description" class="p-1"></label>

                        <input asp-for="Description" class="form-control" />

                    </div>

                    <div class="mb-2 row">

                        <label asp-for="AdoptionStatus" class="p-1"></label>

                        <select asp-for="AdoptionStatus" class="form-control">
                            <option value="Available">Available</option>
                            <option value="Pending">Pending</option>
                            <option value="Adopted">Adopted</option>
                        </select>

                    </div>

                    <div class="mb-3 row">

                        <label asp-for="PhotoUrl" class="p-1"></label>

                        <input asp-for="PhotoUrl" class="form-control" />

                    </div>

                    <div class="row">

                        <div class="col-6">
                            <button type="submit" class="btn btn-primary rounded-left form-control">Add</button>
                        </div>

                        <div class="col-6">

                            <a asp-controller="Animal"
                               asp-action="Index"
                               class="btn btn-warning form-control rounded-right">
                                Back to List
                            </a>

                        </div>
                    </div>

                </div>

            </div>

        </form>

    </div>

</div>

