@model List<Listing>

<div class="card shadow border-0 pb-3 card-margin">

    <div class="card-header bg-primary bg-gradient ml-0 py-3">

        <div class="row">

            <div class="col-8">

                <h2 class="text-white px-4">Available Products</h2>

            </div>

        </div>

    </div>

    <div class="card-body">

        <table class="table table-bordered border-easy">

            <thead>

                <tr>

                    <th class="col-3">
                        Brand
                    </th>

                    <th class="col-1">
                        Type
                    </th>

                    <th class="col-1">
                        Description
                    </th>

                    <th class="col-2">
                        Price
                    </th>

                    <th class="col-3">
                        Photo
                    </th>

                    <th>
                        <i class="bi bi-plus-circle"></i>
                    </th>

                </tr>

            </thead>

            <tbody>

                @foreach (var obj in Model.OrderBy(u => u.Id))
                {

                    <tr>

                        <td>
                            @obj.Product.Brand
                        </td>

                        <td>
                            @obj.Product.Type
                        </td>

                        <td>
                            @obj.Product.Description
                        </td>

                        <td>
                            $@obj.Price
                        </td>

                        <td>
                            <img src="@obj.Product.PhotoUrl"
                                 width="80"
                                 height="120"
                                 class="rounded" />
                        </td>

                        <td>

                            <div class="w-75 btn-group-md" role="group">

                                <a asp-controller="Listing" asp-action="Add" asp-route-id="@obj.Id" class="btn btn-primary edit-btn crisp-text">
                                    <i class="bi bi-plus-circle mx-2 crisp-text"></i>Add to cart
                                </a>

                            </div>

                        </td>

                    </tr>

                }

            </tbody>

        </table>

    </div>

</div>