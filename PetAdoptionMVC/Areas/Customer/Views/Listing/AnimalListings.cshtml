@model List<Listing>

<div class="card shadow border-0 pb-3 card-margin">

    <div class="card-header bg-primary bg-gradient ml-0 py-3">

        <div class="row">

            <div class="col-8">

                <h2 class="text-white px-4">Animals Looking for a Forever Home</h2>

            </div>

        </div>

    </div>

    <div class="card-body">

        <table id="tblData" class="table table-bordered border-easy" style="width:100%">

            <thead>

                <tr>

                    <th class="col-3">
                        Name
                    </th>

                    <th class="col-1">
                        Age
                    </th>

                    <th class="col-1">
                        Species
                    </th>

                    <th class="col-2">
                        Price
                    </th>

                    <th class="col-1">
                        Sex
                    </th>

                    <th class="col-3">
                        Photo
                    </th>

                </tr>

            </thead>

        </table>

    </div>

</div>

@section Scripts
{
    <script src="~/js/listing.js"></script>
}