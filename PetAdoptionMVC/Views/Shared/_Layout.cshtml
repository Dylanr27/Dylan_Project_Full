        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/sssceta1zw1vjaa1fry32btutp23y920c55wx1bap4af72ld/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.0.1/js/dataTables.min.js" defer asp-append-version="true"></script>
    <script src="~/js/site.js" defer asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
